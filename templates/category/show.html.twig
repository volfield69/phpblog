{% extends 'base.html.twig' %}

{% block title %}Catégorie > {{ category_name(category.id) }}{% endblock %}

{% block body %}
    <h1><i class="fas fa-home"></i> Catégorie > {{ category_name(category.id) }}</h1>
    <div class="container-fluid">
        <table class="table">
            <tbody>
            <tr>
                <th>{{ 'field.id'|trans }}</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>{{ 'field.title'|trans }}</th>
                <td>{{ category.title }}</td>
            </tr>
            </tbody>
        </table>
        <div class="row justify-content-center">
            <div class="col-2"><a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-tableau centered btn-lg shadow-sm"><i class="fas fa-angle-right"></i>{{ 'base.update'|trans }}</a></div>
            <div class="col-2 ">{{ include('category/_delete_form.html.twig') }}</div>
        </div>
        <div class="row">
            <div class="col-4">&nbsp;</div>
        </div>
    </div>
    <a href="{{ path('category_index') }}" class="btn btn-suivant centered btn-lg shadow-sm"><i class="fas fa-angle-right"></i>{{ 'base.back'|trans }}</a>
{% endblock %}
