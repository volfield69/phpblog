{% extends 'base.html.twig' %}

{% block title %}{{ category_name(category_id()) }} > {{ theme_name(theme.id) }}{% endblock %}

{% block body %}
    <h1><i class="fas fa-home"></i> {{ category_name(category_id()) }} > {{ theme_name(theme.id) }}</h1>
    <div class="container-fluid">
        <table class="table">
            <tbody>
            <tr>
                <th>{{ 'field.id'|trans }}</th>
                <td>{{ theme.id }}</td>
            </tr>
            <tr>
                <th>{{ 'field.title'|trans }}</th>
                <td>{{ theme.title }}</td>
            </tr>
            <tr>
                <th>{{ 'field.created_date'|trans }}</th>
                <td>{{ theme.createdAt ? theme.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{{ 'field.last_update'|trans }}</th>
                <td>{{ theme.updatedAt ? theme.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{{ 'field.order'|trans }}</th>
                <td>{{ theme.ordre }}</td>
            </tr>
            </tbody>
        </table>
        <div class="row justify-content-center">
            <div class="col-2"><a href="{{ path('theme_edit', {'id': theme.id}) }}" class="btn btn-tableau centered btn-lg shadow-sm"><i class="fas fa-angle-right"></i>{{ 'base.update'|trans }}</a></div>
            <div class="col-2 ">{{ include('theme/_delete_form.html.twig') }}</div>
        </div>
        <div class="row">
            <div class="col-4">&nbsp;</div>
        </div>
    </div>
    <a href="{{ path('theme_index') }}" class="btn btn-suivant centered btn-lg shadow-sm"><i class="fas fa-angle-right"></i>{{ 'base.back'|trans }}</a>
{% endblock %}
